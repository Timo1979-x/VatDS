<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%p %c: %m%n"/>
        </layout>
    </appender>
 
    <appender name="DRFA" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/test.log" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <param name="Append" value="true" />
        <param name="Threshold" value="DEBUG" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c - %m%n" />
        </layout>
    </appender>
 
    <appender name="R" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="logs/example.log" />
        <param name="MaxFileSize" value="1KB" />
        <!-- Keep one backup file -->
        <param name="MaxBackupIndex" value="3" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%p %t %c - %m%n" />
        </layout>
         <filter class="org.apache.log4j.varia.LevelRangeFilter">  
            <param name="LevelMin" value="ERROR" />  
        </filter>
     </appender>
    <!-- Debugging loggers -->
        
    <!-- Uncomment to enable debug on calpoly code only -->
    <!--
    <logger name="edu.calpoly">
            <level value="debug"/>
            <appender-ref ref="ROLL" />
    </logger>
    -->
    
    <appender name="ROLL" class="org.apache.log4j.rolling.RollingFileAppender">
        <!-- The active file to log to -->
        <param name="file" value="logs/portal.log" />
        <param name="append" value="true" />
        <param name="encoding" value="UTF-8" />

        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <!-- The file to roll to, this is a fairly intelligent parameter, if the file
            ends in .gz, it gzips it, based on the date stamp it rolls at that time, 
            default is yyyy-MM-dd, (rolls at midnight)
            See: http://logging.apache.org/log4j/companions/extras/apidocs/org/apache/log4j/rolling/TimeBasedRollingPolicy.html -->
            <param name="FileNamePattern" value="logs/portal.%d{yyyy-MM}.log.gz" />
        </rollingPolicy>

        <layout class="org.apache.log4j.PatternLayout">
            <!-- The log message pattern -->
            <param name="ConversionPattern" value="%5p %d{ISO8601} [%t][%x] %c - %m%n" />
        </layout>
    </appender>
    <!--Корневой logger-->
    <root>
        <!-- OFF< TRACE< DEBUG< INFO< WARN< ERROR< FATAL< ALL -->
        <priority value ="ERROR" />
        <appender-ref ref="console" />
        <appender-ref ref="DRFA" />
        <appender-ref ref="R" />
        <appender-ref ref="ROLL" />
       
    </root>
</log4j:configuration>